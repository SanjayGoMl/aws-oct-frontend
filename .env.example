# API Configuration
# Base URL for the Crisis Journalist AI API
VITE_API_BASE_URL=https://your-api-url.cloudfront.net

# Video URLs (for demo purposes - in production, these should come from API)
# This should be a presigned URL from your S3 bucket
VITE_DEMO_VIDEO_URL=https://your-bucket.s3.region.amazonaws.com/path/to/video.mp4

# API Timeouts (in milliseconds)
VITE_API_TIMEOUT=120000
VITE_API_UPLOAD_TIMEOUT=300000

# Upload Configuration
VITE_MAX_UPLOAD_SIZE=104857600

# CORS Configuration
VITE_API_WITH_CREDENTIALS=false

# Environment
VITE_NODE_ENV=development
# API Configuration
# Base URL for the Crisis Journalist AI API
VITE_API_BASE_URL=http://0.0.0.0:8000

# Authentication API Base URL (can be same as API_BASE_URL)
VITE_AUTH_API_BASE_URL=http://0.0.0.0:8000

# Video URLs (for demo purposes - in production, these should come from API)
# This should be a presigned URL from your S3 bucket
VITE_DEMO_VIDEO_URL=https://your-bucket.s3.region.amazonaws.com/path/to/video.mp4

# API Timeouts (in milliseconds)
VITE_API_TIMEOUT=120000
VITE_API_UPLOAD_TIMEOUT=300000

# Upload Configuration
VITE_MAX_UPLOAD_SIZE=104857600

# CORS Configuration
VITE_API_WITH_CREDENTIALS=false

# Environment
VITE_NODE_ENV=development

# JWT Token Storage Key (for localStorage)
VITE_TOKEN_STORAGE_KEY=crisis_journalist_auth_token
VITE_USER_STORAGE_KEY=crisis_journalist_user_data